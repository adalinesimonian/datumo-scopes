{
  "name": "datumo-scopes",
  "version": "0.1.0",
  "description": "Authorize data access on Datumo models using scopes",
  "main": "lib/index.js",
  "scripts": {
    "compile": "gulp babel",
    "compile-watch": "gulp babel-watch",
    "prepublish": "npm run compile",
    "test": "npm run compile && mocha test/**/*.es6 && npm run lint",
    "test-watch": "npm run compile && mocha test/**/*.es6 --watch",
    "lint": "eslint src/**/*.es6 test/**/*.es6 && echo Code looks good!"
  },
  "keywords": [
    "authorize",
    "authorization",
    "security",
    "access",
    "scope",
    "scopes",
    "data",
    "model",
    "modelling",
    "schema",
    "persistence",
    "validate",
    "validation",
    "es6",
    "class",
    "classes",
    "object",
    "objects",
    "JSON",
    "light",
    "lightweight"
  ],
  "files": [
    "lib"
  ],
  "babel": {
    "blacklist": [
      "es6.classes",
      "es6.forOf",
      "regenerator",
      "es6.arrowFunctions",
      "es6.constants",
      "es6.blockScoping"
    ]
  },
  "engines": {
    "node": ">=4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vsimonian/datumo.git"
  },
  "author": "Vartan Simonian",
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.8.23",
    "chai": "^3.3.0",
    "del": "^2.0.2",
    "eslint": "^1.4.1",
    "eslint-config-standard": "^4.3.2",
    "eslint-plugin-standard": "^1.3.0",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-babel": "^5.2.1",
    "gulp-plumber": "^1.0.1",
    "gulp-watch": "^4.3.5",
    "mocha": "^2.3.3",
    "through2": "^2.0.0",
    "datumo": "^0.1.3"
  },
  "peerDependencies": {
    "datumo": "^0.1.3"
  }
}
